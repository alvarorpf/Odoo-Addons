<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_partner_info_form" model="ir.ui.view">
            <field name="name">update.partner.info.form</field>
            <field name="model">update.partner.info</field>
            <field name="arch" type="xml">
                <form string="Actualizar Contacto">
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="parent" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="department_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button name="action_update" string="Actualizar" type="object"
                                class="btn-primary"/>
                        <button string="Salir" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>