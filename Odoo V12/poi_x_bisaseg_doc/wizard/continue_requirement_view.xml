<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="continue_requirement_form" model="ir.ui.view">
            <field name="name">continue.requirement.form</field>
            <field name="model">continue.requirement</field>
            <field name="arch" type="xml">
                <form string="Continuar Requerimiento">
                    <group>
                        <field name="request_id" invisible="1"/>
                        <field name="comment"/>
                    </group>
                    <footer>
                        <button name="action_continue" string="Continuar Requerimiento" type="object"
                                class="btn-primary"/>
                        <button string="Salir" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>