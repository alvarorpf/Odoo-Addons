<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="document_system_form">
        <field name="name">document.system.form</field>
        <field name="model">document.system</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="document_system_tree">
        <field name="name">document.system.tree</field>
        <field name="model">document.system</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_document_system">
        <field name="name">Sistema</field>
        <field name="res_model">document.system</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>