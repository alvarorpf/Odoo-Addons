<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_karlovy" model="ir.ui.view">
        <field name="name">res.config.settings.karlovy</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>Configuración de conexión V7</h2>
                <div class="row mt16 o_settings_container" id="connection_v7_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="url_connection_setting">
                        <div class="o_setting_right_pane">
                            <label string="Url de conexión"/>
                            <div class="text-muted">
                                Url para realizar la conexión con la versión 7 de odoo
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="url_connection" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="database_connection_setting">
                        <div class="o_setting_right_pane">
                            <label string="Base de datos de conexión"/>
                            <div class="text-muted">
                                Nombre de base de datos para la conexión con la versión 7 de odoo
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="database_connection" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="user_connection_setting">
                        <div class="o_setting_right_pane">
                            <label string="Usuario de conexión"/>
                            <div class="text-muted">
                                Usuario para la conexión con la versión 7 de odoo
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="user_connection" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="password_connection_setting">
                        <div class="o_setting_right_pane">
                            <label string="Password de conexión"/>
                            <div class="text-muted">
                                Password para la conexión con la versión 7 de odoo
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="password_connection" class="oe_inline" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>