<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tax_inverse_wizard_form" model="ir.ui.view">
            <field name="name">tax.inverse.wizard.form</field>
            <field name="model">tax.inverse.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cálculo precio inverso">
                    <group>
                        <span class="o_form_label">Especifique el monto al que quiere llegar después de aplicar
                            impuestos
                        </span>
                    </group>
                    <group>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button name="action_update_price" string="Calcular" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
