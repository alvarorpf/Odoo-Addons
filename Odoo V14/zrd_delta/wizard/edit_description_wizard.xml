<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_description_wizard_form" model="ir.ui.view">
            <field name="name">edit.description.wizard.form</field>
            <field name="model">edit.description.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Edición de Descrición">
                    <group>
                        <span class="o_form_label">Especifique la nueva descripción de la línea de factura
                        </span>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button name="action_update_description" string="Actualizar" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
